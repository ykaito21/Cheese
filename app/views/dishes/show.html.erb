<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css"/>

<div class="container dishshow">
  <div class="row">
    <div class="col-xs-12">
      <h2><%= @dish.name %><span class="price">¥<%= @dish.price %></span></h2>
      <p><%= @dish.description %></p>
    </div>
  </div>

  <div class="row">
    <div class="dish-img-area col-sm-12 col-md-6">
      <img src="<%= @dish.picture_url %>" alt="Tomato Pasta">
    </div>

    <div class="col-sm-12 col-md-6">
      <h3><%= @dish.restaurant.name %></h3>
      <h4>address</h4>
      <p>〒150-0012 Tōkyō-to, Shibuya-ku, Hiroo, 1 Chome−3−13</p>
    </div>
  </div>
  <div class="row form-area">
    <form method="post">
      <div class="form-row">
        <div class="col-xs-12 col-md-12 form-dish-name">
          <p class="form-item-title">
          <%= @dish.name %><span class="price">¥<%= @dish.price %></span>
          </p>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-xs-12 col-md-3">
          <label for="">Quantity</label>
          <select class="form-control" id="exampleFormControlSelect1">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
          </select>
        </div>
        <div class="form-group col-xs-12 col-md-6">
          <div class="form-group"> <!-- Date input -->
          <!-- <label class="control-label" for="date">Date</label>
            <input class="form-control" id="date" name="date" placeholder="MM/DD/YYY" type="text"/> -->
            <label for="">Date and Time</label>
            <input class="form-control" type="datetime-local" name="example" step="300">
          </div>
        </div>
      </div>
      <div class="form-row">
          <div class="form-group col-xs-12 form-dish-btn">
            <button type="button" class="btn btn-danger">Order</button>
          </div>
      </div>

    </form>
  </div>
</div>
