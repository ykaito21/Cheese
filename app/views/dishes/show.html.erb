<div class="container dishshow">
  <div class="row">
    <div class="col-xs-12">
      <h2><%= @dish.name %><span class="price">¥<%= @dish.price %></span></h2>
      <p><%= @dish.description %></p>
    </div>
  </div>

  <div class="row">
    <div class="dish-img-area col-sm-12 col-md-6">
      <%= cl_image_tag @dish.photo %>" alt="Tomato Pasta">
    </div>

    <div class="col-sm-12 col-md-6">
      <h3><%= @dish.restaurant.name %></h3>
      <h4>address</h4>
      <p><%= @dish.restaurant.address %></p>
    </div>
    <div class="col-sm-12 col-md-6">
      <p><%= link_to "Check This Restaurant", restaurant_path(@dish, @restarant) %></p>
    </div>
  </div>
  <div class="row form-area">
      <div class="form-row">
        <div class="col-xs-12 col-md-12 form-dish-name">
          <p class="form-item-title">
          <%= @dish.name %><span class="price">¥<%= @dish.price %></span>
          </p>
        </div>
        <div>
          <%= render "orders/form", order: @order %>
        </div>
      </div>
  </div>
</div>
