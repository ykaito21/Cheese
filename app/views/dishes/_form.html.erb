
<%= simple_form_for [@restaurant, @dish] do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :category, collection: Dish::CATEGORY %>
  <%= f.input :price %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= f.button :submit, "Add", class: "btn btn-warning btn-block"%>
<% end %>
