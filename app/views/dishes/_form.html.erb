
<%= simple_form_for [@restaurant, @dish] do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :category %>
  <%= f.input :price %>
  <%= f.input :picture_url %>
  <%#= f.input :picture_url_cache, as: :hidden %>

  <%= f.button :submit, "Edit", class: "btn btn-warning btn-block"%>
<% end %>
